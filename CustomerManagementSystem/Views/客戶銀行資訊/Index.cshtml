@model IEnumerable<CustomerManagementSystem.Models.客戶銀行資訊>

@{
    ViewBag.Title = "客戶銀行帳戶管理";
    string key = ViewBag.keyword;
}

<h2>客戶銀行帳戶管理</h2>

<form class="form-inline" action="">
    <div class="input-group">
        <input type="search" name="keyword" id="keyword" class="form-control input-sm" placeholder="請輸入關鍵字" />
        <span class="input-group-btn">
            <input type="submit" value="查詢" class="btn btn-sm btn-default" />
        </span>
    </div>
</form>
<br />
<p>
    @Html.ActionLink("新增客戶銀行帳戶", "Create")
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.銀行名稱)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.銀行代碼)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.分行代碼)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.帳戶名稱)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.帳戶號碼)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.客戶資料.客戶名稱)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.Raw(string.IsNullOrEmpty(key) ? item.銀行名稱 : item.銀行名稱.Replace(key, string.Format("<mark>{0}</mark>", key)))
        </td>
        <td>
            @Html.Raw(string.IsNullOrEmpty(key) ? item.銀行代碼.ToString() : item.銀行代碼.ToString().Replace(key, string.Format("<mark>{0}</mark>", key)))
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.分行代碼)
        </td>
        <td>
            @Html.Raw(string.IsNullOrEmpty(key) ? item.帳戶名稱 : item.帳戶名稱.Replace(key, string.Format("<mark>{0}</mark>", key)))
        </td>
        <td>
            @Html.Raw(string.IsNullOrEmpty(key) ? item.帳戶號碼 : item.帳戶號碼.Replace(key, string.Format("<mark>{0}</mark>", key)))
        </td>
        <td>
            @Html.Raw(string.IsNullOrEmpty(key) ? item.客戶資料.客戶名稱 : item.客戶資料.客戶名稱.Replace(key, string.Format("<mark>{0}</mark>", key)))
        </td>
        <td>
            @Html.ActionLink("編輯", "Edit", new { id = item.Id }) |
            @Html.ActionLink("詳細內容", "Details", new { id = item.Id }) |
            @Html.ActionLink("刪除", "Delete", new { id = item.Id })
        </td>
    </tr>
}
</table>
