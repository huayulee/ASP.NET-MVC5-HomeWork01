@model IEnumerable<CustomerManagementSystem.Models.客戶聯絡人>

@{
    ViewBag.Title = "客戶聯絡人管理";
    string key = ViewBag.keyword;
}

<h2>客戶聯絡人管理</h2>

<form class="form-inline" action="">
    <div class="input-group">
        <input type="search" name="keyword" id="keyword" class="form-control input-sm" placeholder="請輸入關鍵字" />
        <span class="input-group-btn">
            <input type="submit" value="查詢" class="btn btn-sm btn-default" />
        </span>
    </div>
</form>
<br />
<p>
    @Html.ActionLink("新增客戶聯絡人", "Create")
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.職稱)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.姓名)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.手機)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.電話)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.客戶資料.客戶名稱)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.Raw(string.IsNullOrEmpty(key) ? item.職稱 : item.職稱.Replace(key, string.Format("<mark>{0}</mark>", key)))
        </td>
        <td>
            @Html.Raw(string.IsNullOrEmpty(key) ? item.姓名 : item.姓名.Replace(key, string.Format("<mark>{0}</mark>", key)))
        </td>
        <td>
            @Html.Raw(string.IsNullOrEmpty(key) ? item.Email : item.Email.Replace(key, string.Format("<mark>{0}</mark>", key)))
        </td>
        <td>
            @Html.Raw(string.IsNullOrEmpty(key) ? item.手機 : item.手機.Replace(key, string.Format("<mark>{0}</mark>", key)))
        </td>
        <td>
            @Html.Raw(string.IsNullOrEmpty(key) ? item.電話 : item.電話.Replace(key, string.Format("<mark>{0}</mark>", key)))
        </td>
        <td>
            @Html.Raw(string.IsNullOrEmpty(key) ? item.客戶資料.客戶名稱 : item.客戶資料.客戶名稱.Replace(key, string.Format("<mark>{0}</mark>", key)))
        </td>
        <td>
            @Html.ActionLink("編輯", "Edit", new { id=item.Id }) |
            @Html.ActionLink("詳細內容", "Details", new { id=item.Id }) |
            @Html.ActionLink("刪除", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
